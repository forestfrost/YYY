.searchContainer {
  box-sizing: border-box;
  height: 100%;
  padding: 20rpx 30rpx;
}
.searchContainer .header {
  display: flex;
  justify-content: flex-start;
}
.searchContainer .header .searchInput {
  font-size: 28rpx;
  border-radius: 10rpx;
  height: 45rpx;
  flex: 1;
  background-color: #ededed;
  margin: 5rpx 10rpx;
  display: flex;
}
.searchContainer .header .searchInput input {
  width: 100%;
}
.searchContainer .header .searchInput text {
  height: 45rpx;
  line-height: 45rpx;
}
.searchContainer .header .cancle {
  font-size: 26rpx;
  flex: 0 0 100rpx;
  text-align: center;
  border: 1rpx solid rgba(0, 0, 0, 0.3);
  margin: 5rpx auto;
  border-radius: 12rpx;
}
.searchContainer .showSearchResultContainer .searchContent {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #d43c33;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}
.searchContainer .showSearchResultContainer .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  font-size: 26rpx;
}
.searchContainer .showSearchResultContainer .searchItem .left {
  margin-right: 10rpx;
}
.searchContainer .showSearchResultContainer .searchItem .name {
  flex: 1;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
}
.searchContainer .historyHeader {
  font-size: 28rpx;
}
.searchContainer .history {
  padding: 20rpx 30rpx;
  height: 120rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  font-size: 26rpx;
}
.searchContainer .history text {
  margin: 10rpx 20rpx;
  padding: 0 20rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  background-color: #ededed;
  border-radius: 10rpx;
}
.searchContainer .hotSearch .hotSearchHeader {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #000;
}
.searchContainer .hotSearch .hotItemContainer {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.searchContainer .hotSearch .hotItemContainer .hotItem {
  font-size: 26rpx;
  box-sizing: border-box;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}
.searchContainer .hotSearch .hotItemContainer .hotItem:hover {
  color: orange;
  border: 1rpx solid orange;
  border-radius: 16rpx;
}
.searchContainer .hotSearch .hotItemContainer .hotItem .index {
  font-size: 22rpx;
  margin-right: 10rpx;
}
.searchContainer .hotSearch .hotItemContainer .hotItem .name {
  margin-right: 10rpx;
}
