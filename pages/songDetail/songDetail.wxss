@keyframes myRotate {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
.songDetailContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.songDetailContainer .author {
  color: #fff;
}
.songDetailContainer .needle {
  position: relative;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  z-index: 2001;
  transform-origin: 5% 5%;
  transform: rotate(-30deg);
  transition: 1s;
}
.songDetailContainer .needleRotate {
  transform: rotate(0deg);
}
.songDetailContainer .circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 10rpx 0;
  position: relative;
  z-index: 2002;
}
.songDetailContainer .descContainer {
  z-index: 2000;
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.songDetailContainer .descContainer .disc {
  width: 598rpx;
  height: 598rpx;
}
.songDetailContainer .descContainer .musicImg {
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
  position: absolute;
  left: 0%;
  top: 0%;
  right: 0;
  bottom: 0;
  margin: auto;
}
.songDetailContainer .descContainer .musicImgRotate {
  animation: myRotate 6s 1s linear infinite;
}
.songDetailContainer .progressControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.songDetailContainer .progressControl .barControl {
  position: relative;
  width: 450rpx;
  top:30rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.0);
  border-top:4rpx solid rgba(0, 0, 0, 0.5);
  padding: 30rpx;
  margin: auto;
}
.songDetailContainer .progressControl .barControl .audio-currentTime-Bar {
  position: absolute;
  top: -4rpx;
  left: 0;
  width: 0rpx;
  z-index: 1;
  height: 4rpx;
  background-color: red;
  margin: auto;
}
.songDetailContainer .progressControl .barControl .ball {
  content: "";
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #fff;
  top: -8rpx;
  left: 0rpx;
}
.songDetailContainer .musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #fff;
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.songDetailContainer .musicControl text {
  width: 20rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.songDetailContainer .musicControl .big {
  transform: translateX(-20rpx);
  font-size: 100rpx;
}
.songListContainer {
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: white;
  width: 90%;
  margin: 20rpx auto;
  padding: 30rpx;
}
.songListContainer .pageContainerHeader .handleBlock {
  display: flex;
  justify-content: space-between;
}
.songListContainer .pageContainerHeader .handleBlock .left {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}
.songListContainer .pageContainerHeader .handleBlock .right {
  height: 80rpx;
  line-height: 80rpx;
  flex: 0 0 40%;
  display: flex;
  justify-content: flex-end;
}
.songListContainer .pageContainerHeader .handleBlock .right .clear {
  display: block;
  margin-left: 20rpx;
}
.songListContainer .songItemContainer {
  height: calc(60vh - 80rpx);
}
.songListContainer .songItemContainer .songItem {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}
.songListContainer .songItemContainer .songItem .songName {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: block;
  width: 60%;
}
.songListContainer .songItemContainer .playing {
  background-color: rgba(248, 248, 248, 0.733);
  color: rgba(206, 67, 67, 0.733);
}
